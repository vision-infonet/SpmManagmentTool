                                HorizontalAlignment="Center" Width="110" Height="25"  Style="{StaticResource NormalButton}">Load All SPM Units</Button>
                        <ProgressBar  Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="4" Name="pgbLoadAppsKeys" Height="20" VerticalAlignment="Bottom" />
                        <Label Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="4" Name="lblLoadAppsKeysStatus" Height="25" Foreground="Red"
                               BorderBrush="Beige" VerticalAlignment="Bottom" BorderThickness="1"></Label>
                    </Grid>
                </TabItem>
                <TabItem Name="tabTest">
                </TabItem>
            </TabControl>
        </Grid>
        <GroupBox  Grid.Row="4" Grid.Column="0" Header="SPM Response Received" Name="DataReceivedGrpbox" Height="280">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="5"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="5"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="800" />
                    <ColumnDefinition Width="5" />
                </Grid.ColumnDefinitions>
                <TextBox Grid.Row="1" Grid.Column="1" Name="DataReceiveTxt" Style="{StaticResource CustomTextBoxStyle}"
                         Width="800" Height="150" HorizontalAlignment="Center" IsReadOnly="True" VerticalScrollBarVisibility="Visible"></TextBox>
                <Button  Grid.Row="2" Grid.Column="1" Content="Clear" Name="ClearBtn" Height="20" Width="120" 
                         HorizontalAlignment="Center"  Click="ClearBtn_Click" Style="{StaticResource NormalButton}"></Button>
                
            </Grid>
        </GroupBox>
    </Grid>
</Window>
